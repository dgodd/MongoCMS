<!DOCTYPE html>
<html>
<head>
  <title>MongoCMS</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'fileuploader' %>
<script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="/ckeditor/adapters/jquery.js"></script>
<script type="text/javascript"> $(function() { 
$('label').each(function() {
var lb = $(this);
var f = lb.attr('for');
var inp = $('input#'+f+', textarea#'+f);
if(inp[0]) { inp.attr('placeholder', lb.text()); lb.hide(); }
});
$( 'textarea.editor, textarea#page_body' ).ckeditor();
 }); </script>
  <%= csrf_meta_tag %>
</head>
<body>
<div style="background:black;color:white;text-align:center;padding:4px;">User: <%= current_user %></div>

<%= yield %>

</body>
</html>
